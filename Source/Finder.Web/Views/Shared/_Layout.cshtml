<!DOCTYPE html>
<html ng-app="FinderApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@(this.ViewBag.Title)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <input type="hidden" id="rootPath" value="@HttpContext.Current.Request.ApplicationPath" />
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#!/" class="navbar-brand">Finder</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#!Finder">Filmsuche</a>
                    </li>
                    <li>
                        <a href="#!Tinder">Swipe It</a>
                    </li>
                    <li>
                        <a href="#!Overview">Overview</a>
                    </li>
                    <li>
                        <a href="#!User">Userbereich</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#!Login">Login</a>
                    </li>
                    <li>
                        <a href="#!Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
<div class="container body-content">
    <br />
    <div ng-view>
        @(this.RenderBody())
    </div>
    <hr />
    <footer>
        <p>Copyright 2018 - @DateTime.Now.Year</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/client")
    @Scripts.Render("~/bundles/swipingcards") 
    @(this.RenderSection("scripts", required: false))
</body>
</html>